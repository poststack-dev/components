{
  "name": "@poststack/next",
  "version": "0.1.1",
  "description": "Poststack components for Next.js",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "publishConfig": {
